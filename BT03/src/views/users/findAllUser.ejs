<div class="row">
    <div class="col-12">
        <div class="card shadow-lg">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0">üë• All Users</h2>
                <a href="/crud" class="btn btn-light btn-sm">‚ûï Add New User</a>
            </div>
            <div class="card-body">
                <% if (datalist && Array.isArray(datalist) && datalist.length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>üë§ Name</th>
                                    <th>‚úâÔ∏è Email</th>
                                    <th>üìû Phone</th>
                                    <th>üìç Address</th>
                                    <th>‚öôÔ∏è Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% datalist.forEach(function(user) { %>
                                    <tr>
                                        <td>
                                            <strong>
                                                <%= user.firstName %>
                                                    <%= user.lastName %>
                                            </strong><br>
                                            <small class="badge <%= user.gender ? 'bg-primary' : 'bg-info' %>">
                                                <%= user.gender ? 'üë® Male' : 'üë© Female' %>
                                            </small>
                                        </td>
                                        <td>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <%= user.phoneNumber || '-' %>
                                        </td>
                                        <td>
                                            <%= user.address || '-' %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/edit-crud?id=<%= user._id %>"
                                                    class="btn btn-sm btn-warning">‚úèÔ∏è Edit</a>
                                                <a href="/delete-crud?id=<%= user._id %>" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure?')">üóëÔ∏è Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="alert alert-warning text-center py-5">
                            <div style="font-size: 2rem; margin-bottom: 1rem;">üì≠</div>
                            <p>No users found.</p>
                            <a href="/crud" class="btn btn-primary">‚ûï Create First User</a>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>
</div>